<h1>Listing responses</h1>

<table>
  <tr>
    <th>Survey</th>
    <th>Question</th>
    <th>Chosen image</th>
    <th>Reversed?</th>
    <th></th>
  </tr>

<% @responses.each do |response| %>
  <tr>
    <td><%= response.survey_id %></td>
    <td><%= link_to "Question#{response.question_id}", question_path(response.question) %></td>
    <td><%= response.chosen_image %></td>
    <td><%= response.reversed %></td>
    <td><%= link_to 'Show', response %></td>
  </tr>
<% end %>
</table>

<br />

